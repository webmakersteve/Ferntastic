   "slug":"patsys",
   "connections":{
      "MySQL":{
         "user":"db145083_writer",
         "database":"db145083_patsys",
         "password":"91ferns_writer",
         "host":"internal-db.s145083.gridserver.com"
      }
   },
   "controller":"controller.patsys.php",
   "layouts":{
      "homepage":{
         "name":"Add Menu",
         "regions":[
            "header",
            "site",
            "footer"
         ]
      },
      "default":{
         "name":"Regular Page",
         "regions":[
            "header",
            "page",
            "footer"
         ]
      }
   },
   "navigations":[
      {
         "title":"Main Navigation",
         "name":"mainNav"
      },
      {
         "title":"Footer Navigation Left",
         "name":"footNavLeft"
      },
      {
         "title":"Footer Navigation Left Under",
         "name":"footNavRight"
      }
   ],
   "stylesheets":[
      "style.css"
   ],
   "systemCollections":[
      "products"
   ],
   "routes":{

   },
   "schema":{
      "items":{
         "id":{
            "dataType":"int(30)",
            "validator":"integer",
            "mapTo":"items.id",
            "key":true
         },
         "item_id":{
            "dataType":"string(30)",
            "validator":"string",
            "mapTo":"items.item_id"
         },
         "name":{
            "dataType":"string(200)",
            "validator":"string",
            "mapTo":"items.name"
         },
         "description":{
            "dataType":"text",
            "validator":false,
            "mapTo":"items.description"
         },
         "price":{
            "dataType":"float(30)",
            "validator":"price",
            "mapTo":"items.price"
         },
         "entered":{
            "dataType":"int(40)",
            "validator":"timestamp",
            "mapTo":"items.entered"
         },
         "owned":{
            "dataType":"int(30)",
            "validator":"exists",
            "mapTo":"items.owned"
         },
         "categories":{
            "dataType":"int(30)",
            "validator":"exists",
            "mapTo":{
               "key":"items.categories",
               "foreignKey":"patsys_item_taxonomy.id"
            }
         },
         "active":{
            "dataType":"int(1)",
            "validator":"exists",
            "mapTo":"items.active"
         },
         "id_parent":{
            "dataType":"int(30)",
            "validator":"exists",
            "mapTo":{
               "key":"items.id_parent",
               "foreignKey":"items.id"
            }
         }
      }
   }
}